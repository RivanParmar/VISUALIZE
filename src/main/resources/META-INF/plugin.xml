<idea-plugin>
    <id>com.rivan.android.studio.visual.scripting</id>
    <name>Android Studio Visual Scripting</name>
    <vendor email="support@yourcompany.com" url="https://github.com/RivanParmar/Android-Studio-Visual-Scripting-Plugin">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.androidstudio</depends>
    <depends>com.android.tools.design</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <extensions defaultExtensionNs="com.android.tools.idea.uibuilder.editor.multirepresentation.sourcecode">
        <sourceCodePreviewRepresentationProvider
                implementation="com.rivan.android.studio.visual.scripting.VScriptingPreviewRepresentationProvider" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>